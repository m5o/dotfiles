### ENV VARS
export MY_NAME="Clinton R. Nixon"
export MY_EMAIL="crnixon@gmail.com"
export MY_GITHUB_LOGIN="crnixon"

### ALIASES
alias g="grep"
alias g+="grep -r $1 *"
alias h="history"
alias ll="ls -laF"
alias .p="source ~/knapsack/zshrc"
alias \?="h | g $1"
alias ps\?="ps ax | grep $1"
alias c='clear'
alias ms='mysql -u root'
alias t='thor'

# Editor
alias e=$EDITOR

# Subversion
alias sa='svn status | grep "^\?" | awk "{print \$2}" | xargs svn add'
alias sl='svn log --limit 5'
alias se='svn log -v --limit 1'
alias sr='svn diff | less'

# Git
alias ga='git add'
alias gap='git add --patch'
alias gc='git commit'
alias gst='git status'
alias gsd='git svn dcommit'
alias gsr='git svn rebase'

# Rails
alias ss='script/server'
alias sc='script/console'
alias a='autotest -rails'
alias rr='touch tmp/restart.txt'

# JRuby
alias j='jruby'
alias jr='jruby -S'
alias jgem='jruby -S gem'
alias jrake='jruby -S rake'
alias jirb='jruby -S irb'